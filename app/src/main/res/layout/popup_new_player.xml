<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newProfileView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:background="@drawable/dialog_bg"
    android:backgroundTint="@color/colorSecondaryDark"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:translationZ="15dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/addNewProfileImageView"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/avatar1"
        android:translationZ="3dp" />

    <TableLayout
        android:id="@+id/playerAvatarImages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

        <TableRow
            android:id="@+id/avatarImagesRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/avatar1"
                android:translationZ="3dp"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_overlay="false"
                app:civ_border_width="0dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/avatar0"
                android:translationZ="3dp"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_overlay="false"
                app:civ_border_width="0dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/avatar2"
                android:translationZ="3dp"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_overlay="false"
                app:civ_border_width="0dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/avatar3"
                android:translationZ="3dp"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_overlay="false"
                app:civ_border_width="0dp" />
        </TableRow>

        <TableRow
            android:id="@+id/avatarImagesRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/avatar4"
                android:translationZ="3dp"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_overlay="false"
                app:civ_border_width="0dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage6"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/avatar5"
                android:translationZ="3dp"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_overlay="false"
                app:civ_border_width="0dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage7"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/avatar6"
                android:translationZ="3dp"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_overlay="false"
                app:civ_border_width="0dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage8"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/avatar7"
                android:translationZ="3dp"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_overlay="false"
                app:civ_border_width="0dp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/newProfileNameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newProfileNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bree_serif"
            android:paddingEnd="8dp"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/newProfileNameEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/colorTertiaryDark"
            android:fontFamily="@font/bree_serif"
            android:hint="&quot;Bob&quot;'"
            android:inputType="textVisiblePassword"
            android:padding="10dp"
            android:selectAllOnFocus="true"
            android:textAlignment="center"
            android:textColor="#DADADA"
            android:textColorHint="#7E7D7D"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newProfileActionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:weightSum="1">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".15"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/colorTertiaryDark"
            android:fontFamily="@font/bree_serif"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Cancel"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight=".15"
            android:background="@drawable/rounded_background"
            android:fontFamily="@font/bree_serif"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Add"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
