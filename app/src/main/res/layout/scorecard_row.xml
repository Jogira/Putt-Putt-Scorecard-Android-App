<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scorecardRowView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:backgroundTint="@color/colorSecondaryDark"
    android:weightSum="1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/scorecardRowPlayerImageView"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_weight="0"
        android:translationZ="3dp" />

    <TextView
        android:id="@+id/scorecardRowPlayerName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_weight=".74"
        android:autoSizeMaxTextSize="27sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizePresetSizes="20sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/bree_serif"
        android:gravity="center_vertical"
        android:text="Name"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scorecardRowPlayerScore"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".25"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/colorTertiaryDark"
        android:fontFamily="@font/bree_serif"
        android:gravity="center"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:textStyle="bold" />


</LinearLayout>